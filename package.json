{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "npm run build && node ./dist/main.cli.js",
    "mock:server": "json-server ./src/mocks/mock-server-data.json --port 3012"
  },
  "devDependencies": {
    "@types/got": "^9.6.12",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "rimraf": "3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^4.1.2"
  }
}
